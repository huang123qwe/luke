<%= simple_form_for [:admin, @product], :defaults => { :input_html => { :class => "form-control" } }, html: { multipart: true, class: 'form-horizontal' } do |f| %> 

  <%= f.input :title, label: "标题" %>
  <%= f.input :cover, label: "封面" %>
  <%= f.input :country, label: "国家", as: :string %>
  <%= f.input :city, label: "城市", as: :string %>
  <%= f.input_field :content, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'} } %>

  <%= f.button :wrapped, value: "commit" %>  
<% end %>
