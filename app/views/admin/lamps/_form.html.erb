<%= simple_form_for [:admin, @lamp], :defaults => { :input_html => { :class => "form-control" } }, html: { multipart: true, class: 'form-horizontal' } do |f| %>  

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :cover, :input_html => { :class => "btn btn-default" }, hint: "图片大小必须小于500k, 宽高比为140×170" %>
    <%= f.input :position, collection: Lamp.positions %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
