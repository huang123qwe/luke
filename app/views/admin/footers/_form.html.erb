<%= simple_form_for [:admin, @footer], :defaults => { :input_html => { :class => "form-control" } }, html: { multipart: true, class: 'form-horizontal' } do |f| %>
    <%= f.input :name, collection: Footer.names %>
    <%= f.input :title %>
  	<%= f.input_field :content, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'} } %>
  	<%= f.button :wrapped, value: "commit" %>  
<% end %>

