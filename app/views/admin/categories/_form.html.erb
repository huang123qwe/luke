<%= simple_form_for [:admin, @category], :defaults => { :input_html => { :class => "form-control" } }, html: { multipart: true, class: 'form-horizontal' } do |f| %> 

	<%= f.input :name, collection: Article::CATEGORIES + ["视频"] %>
	<%= f.input :tags, hint: "用逗号隔开标签" %>

  <%= f.button :wrapped, value: "commit" %>  
<% end %>

<%= javascript_tag do %>
  $('#category_tags').select2();
<% end %>
