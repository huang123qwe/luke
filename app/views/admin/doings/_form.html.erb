<%= simple_form_for [:admin, @doing], :defaults => { :input_html => { :class => "form-control" } }, html: { multipart: true, class: 'form-horizontal' } do |f| %>  
  <%= f.input :position, collection: Doing.positions %>  
  <%= f.input :name %> 
  <%= f.input :cover, :input_html => { :class => "btn btn-default" } %>  
  <%= f.input :video, :input_html => { :class => "btn btn-default" } %>  
  <%= f.input :video_type, collection: Doing.video_types %> 
  <%= f.button :wrapped, value: "commit" %>  
<% end %>
