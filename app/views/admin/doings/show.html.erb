<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @doing.name %>
</p>

<p>
  <strong>Cover:</strong>
  <% case @doing.position %>
  <% when "广告" %>
    <%= image_tag @doing.cover.url %>
  <% when "视频" %>
    <%= image_tag @doing.cover.url(:video) %>
  <% else %>
    <%= image_tag @doing.cover(:small) %>
  <% end %>
  
</p>

<p>
  <strong>位置:</strong>
  <%= @doing.position %>
</p>

<% if @doing.video.present? and @doing.video_type.present? %>
<p>
  <strong>视频:</strong>
	 	<video class="index_s at_cl_vedio video-js vjs-default-skin"
					  controls preload="auto" width="421" height="480"
					  data-setup='{"example_option":true}'>
		 	<source src="<%= @doing.video_url %>" type='<%= @doing.video_type %>' />
	</video>
</p>
<% end %>

<% if @doing.src %>
<p>
  <strong>广告/视频链接:</strong>
  <%= @doing.src %>
</p>
<% end %>


<%= link_to 'Edit', edit_admin_doing_path(@doing) %> |
<%= link_to 'Back', admin_doings_path %>
