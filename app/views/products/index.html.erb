<% content_for :content do %>
<div class="list_banner">
	<% if @first_product.present? %>
	<a href="<%= product_path(@first_product) %>"><span><h1><%= @first_product.title %></h1></span></a>
 		<%= image_tag @first_product.top_cover.url(:small), alt: @first_product.title if @first_product.top_cover %>
 	<p>
 		<%= truncate_html(@first_product.content, length: 300, omission: '...') %>
 	</p>
 	<% end %>
</div>
<div class="list_body">
	<% @products.each do |product| %>
	<div class="list">
		<%= image_tag product.cover.url(:small), alt: product.title if product.cover %>
		<div class="l_c">
	 		<a href="<%= product_url(product) %>"><span><h2><%= product.title %></h2></span></a><br/>
		 	<p><%= truncate_html(product.content, length: 250, omission: '...') %></p>
		</div>
 </div>
 <% end if @products %>
</div>
<% end %>